<p id="notice"><%= notice %></p>

<h1>Grows</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Start Date</th>
      <th>Crop</th>
      <th>Field Name</th>
      <th>Field Number</th>
      <th>Description</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grows.each do |grow| %>
      <tr>
        <% if grow.finished? %>
          <td>Finished</td>
        <% else %>
          <td>On Going</td>
        <% end %>
        <td><%= grow.startdate %></td>
        <td><%= grow.crop.title %></td>
        <td><%= grow.field.title %></td>
        <td><%= grow.field.number %></td>
        <td><%= grow.description %></td>
        <td><%= link_to 'Show', grow %></td>
        <td><%= link_to 'Edit', edit_grow_path(grow) %></td>
        <td><%= link_to 'Destroy', grow, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

